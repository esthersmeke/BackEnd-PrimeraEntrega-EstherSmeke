<!-- views/home.handlebars -->
<h1>Productos</h1>

<div>
  <form method="GET" action="/products">
    <label for="query">Buscar por categoría:</label>
    <input type="text" name="query" id="query" />

    <label for="sort">Ordenar por precio:</label>
    <select name="sort" id="sort">
      <option value="">Sin orden</option>
      <option value="asc">Ascendente</option>
      <option value="desc">Descendente</option>
    </select>

    <button type="submit">Aplicar</button>
  </form>
</div>
<ul>
  {{#each payload}}
    <li>
      <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <p>Precio: ${{this.price}}</p>
      <p>Categoría: {{this.category}}</p>
      <a href="/products/{{this._id}}">
        <button>Ver detalles</button>
      </a>
      <button onclick="addToCart('672fbc5353955b867845e3da', '{{this._id}}')">
        Agregar al carrito
      </button>
    </li>
  {{else}}
    <li>No se encontraron productos</li>
  {{/each}}
</ul>

<div>
  {{#if prevLink}}
    <a href="{{prevLink}}">Página Anterior</a>
  {{/if}}
  <span>Página {{page}} de {{totalPages}}</span>
  {{#if nextLink}}
    <a
      href="{{nextLink}}
"
    >Página Siguiente</a>
  {{/if}}
</div>

<p>Total de productos: {{totalDocs}} | Mostrando: {{docsCount}}</p>

<script src="/js/addToCart.js"></script>